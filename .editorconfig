root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace  = true
max_line_length = 120

[*.php]
charset = euc-jp
indent_style = tab
indent_size = 4

[*.php5]
charset = euc-jp
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.json]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

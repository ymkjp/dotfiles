# User specific aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

alias ls='ls -GFa'
alias la='ls -GFalh'
alias cp='cp -iv'
alias rm='rm -iv'
alias mv='mv -iv'
alias tree='tree -CFa'
alias diff='diff -bB'
alias tm='tmux a'
alias sc='screen -D -RR'
alias grep='grep --color'
alias type='type -a'
alias ag='ag -S'
alias gr='ack-grep -ai'
alias j='jobs -l'

alias rol='ruby -pe'

# IRC irssi
alias irssi='env TERM=screen-256color irssi'

# My function
mc () {
    mkdir -p $1 && cd $1
}

# IP addresses
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias localip='ipconfig getifaddr en1'
alias ips='ifconfig -a'
